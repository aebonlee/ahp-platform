# PostgreSQL Database Configuration
# Render.com에서 제공받은 Internal Database URL 사용
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
# 프론트엔드 URL (GitHub Pages 또는 Render 호스팅)
CORS_ORIGIN=https://aebonlee.github.io

# Security
BCRYPT_ROUNDS=12

# Session Configuration  
SESSION_SECRET=your-very-secure-session-secret-key-here

# Application Configuration
APP_NAME=AHP Decision System
APP_VERSION=1.0.0

# Development Override (로컬 개발용)
# DATABASE_URL=postgresql://username:password@localhost:5432/ahp_db
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:3000