# Render.com Team Plan Environment Variables
# Copy this file to .env.local and fill in your values

# Render API Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_TEAM_ID=your_team_id_here
RENDER_PROJECT_ID=your_project_id_here

# Database Configuration
DATABASE_URL_PROD=postgresql://user:pass@host:5432/ahp_prod
DATABASE_URL_STAGING=postgresql://user:pass@host:5432/ahp_staging
DATABASE_URL_DEV=postgresql://user:pass@host:5432/ahp_dev

# Service URLs
BACKEND_URL_PROD=https://ahp-backend-prod.onrender.com
FRONTEND_URL_PROD=https://ahp-frontend-prod.onrender.com
BACKEND_URL_STAGING=https://ahp-backend-staging.onrender.com
FRONTEND_URL_STAGING=https://ahp-frontend-staging.onrender.com

# Team Member Roles
# Add team members in Render dashboard with these roles:
# - Owner: Full access to all resources
# - Admin: Can manage services and deployments
# - Developer: Can deploy and view logs
# - Viewer: Read-only access

# Notification Settings
ALERT_EMAIL=aebon@naver.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Private Link Configuration (for secure internal communication)
PRIVATE_SERVICE_URL=ahp-backend-prod.internal:3001

# Monitoring
DATADOG_API_KEY=your_datadog_key_here
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_PREVIEW_ENVIRONMENTS=true
ENABLE_AUTO_SCALING=true
ENABLE_PRIVATE_LINKS=true
ENABLE_ISOLATED_ENVIRONMENTS=true