# Production URLs (자동 생성된 Render 도메인)
FRONTEND_URL=https://ahp-frontend.onrender.com
BACKEND_URL=https://ahp-backend.onrender.com

# Staging URLs
STAGING_FRONTEND_URL=https://ahp-frontend-staging.onrender.com
STAGING_BACKEND_URL=https://ahp-backend-staging.onrender.com

# Database URLs (Render Dashboard에서 확인)
# DATABASE_URL은 Render가 자동으로 제공

# API Keys (Render Dashboard에서 생성)
RENDER_API_KEY=your_render_api_key_here

# JWT Secret (자동 생성 또는 직접 설정)
JWT_SECRET=your_jwt_secret_here

# Support Contact
ADMIN_EMAIL=aebon@naver.com
SUPPORT_EMAIL=aebon@naver.com
SUPPORT_PHONE=010-3700-0629
KAKAO_ID=aebon

# Node Environment
NODE_ENV=production

# Port Configuration
PORT=3001

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# CORS Settings
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_LOGIN=true
ENABLE_PASSWORD_RESET=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password